{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS (ts-node)",
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": ["${workspaceFolder}/src/main.ts"],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "runtimeExecutable": "node",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.json"
      },
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "console": "integratedTerminal" // ðŸ‘ˆ Isso envia os logs para o terminal
    }
  ]
}
